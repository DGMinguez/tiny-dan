{
    "compilerOptions": {
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "noImplicitAny": true,
        "noEmitOnError": true,
        "removeComments": true,
        "sourceMap": true,
        "target": "es5",
        "lib": [ "dom", "es6" ],
        "typeRoots": [
            "../node_modules/@types"
        ],
        "outDir": "../.vs/app"
    },
    "exclude": [
        "../node_modules",
        "../node_modules/**",
        "../wwwroot",
        "../wwwroot/**"
    ],
    "angularCompilerOptions": {
        "genDir": ".",
        "debug": true
    }
}
